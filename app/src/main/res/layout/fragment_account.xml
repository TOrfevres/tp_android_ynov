<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ynov.android.to.theodore_orfevres.AccountPageFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/min_by_max"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/account_header"
            android:layout_width="@dimen/min_by_max"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:text="@string/header"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/account_field_1"
            android:layout_width="@dimen/min_by_max"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:ems="10"
            android:hint="@string/field_1"
            android:inputType="textPersonName"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_header" />

        <EditText
            android:id="@+id/account_field_2"
            android:layout_width="@dimen/min_by_max"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:ems="10"
            android:hint="@string/field_2"
            android:inputType="textPersonName"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_field_1" />

        <EditText
            android:id="@+id/account_field_3"
            android:layout_width="@dimen/min_by_max"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:ems="10"
            android:hint="@string/field_3"
            android:inputType="textPassword"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_field_2" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
